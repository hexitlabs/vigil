{
  "name": "vigil-agent-safety",
  "version": "0.1.0",
  "description": "Zero-dependency, <2ms agent safety guardrails. Validates what AI agents DO, not what they SAY.",
  "keywords": [
    "ai",
    "agent",
    "safety",
    "guardrails",
    "security",
    "mcp",
    "langchain",
    "tool-calling",
    "llm"
  ],
  "license": "Apache-2.0",
  "author": "Hexit Labs",
  "repository": {
    "type": "git",
    "url": "https://github.com/hexitlabs/vigil"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./policies/*": "./dist/policies/*"
  },
  "bin": {
    "vigil": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.2.1"
  }
}
